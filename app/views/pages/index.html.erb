<section class="container my-5">
  <h1>Hogwarts</h1>
  <h2 class="">Conoce a los personajes</h2>
  <div class="mt-5 row row-cols-1 row-cols-md-3 g-4">
    <% @characters.each do |character| %>
      <div class="col">
        <div class="card h-100">
          <div class="card-body">
            <h3 class="card-title"><%= character.name%></h3>
            <h4 class="card-title"><%= character.house%></h4>
            <p class="card-text"><%=character.location%></p>
          </div>
          <div class="card-footer text-center">
            <small>ยก<%= character.spell%>!</small>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>
